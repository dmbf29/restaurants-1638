<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :rating %>
  <%= f.input :category %>
  <%= f.input :opening_date,
            as: :string,
            input_html: { data: { controller: "datepicker" }, class: 'custom-class' } %>
